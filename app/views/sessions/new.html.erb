<h1>Sign In</h1>

<%= form_with model: @user, url: sign_in_path, data: { turbo_frame: "sign-in-form" } do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control", placeholder: "name@mail.com", autocomplete: "username" %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control", placeholder: "password", autocomplete: "password" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Sign In", class: "btn btn-primary", data: { turbo: "false" } %>
  </div>
<% end %>